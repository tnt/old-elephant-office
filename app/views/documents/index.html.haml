.scroller
  %h1 Dokumente
  %ul.documents_list{'data-selected-contactables' => '', 'data-lightbulb-filters-count' => 0}
    - for document in @documents
      = render "#{document.main_type.underscore.pluralize}/document_line", :document => document, |
        :customer => document.customer, :doc_alias => nil                                         |
  #pagination
    = paginate @documents, :inner_window => 4, :outer_window => 3
- content_for :footer do
  .footer_cont
    = select_tag 'cpp', select_page_options( @documents_per_page ), :data => {:model => :documents}
